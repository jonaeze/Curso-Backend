<div class="container">
    <h1>Registro</h1>
    <div class="form-container">
        <form id="registerForm">
            <label for="first_name">Nombre</label>
            <input type="text" id="first_name" name="first_name" class="input-field">
            <br />
            <label for="last_name">Apellido</label>
            <input type="text" id="last_name" name="last_name" class="input-field">
            <br />
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="input-field">
            <br />
            <label for="age">Edad</label>
            <input type="number" id="age" name="age" class="input-field">
            <br />
            <label for="password">Contraseña</label>
            <input type="password" id="password" name="password" class="input-field">
            <input type="submit" value="Registrar" class="submit-btn">
        </form>
    </div>
    <p>¿Ya tienes cuenta?</p> <a href="/login" class="link">Ingresa aquí</a>
</div>

<script src="/static/js/register.js"></script>